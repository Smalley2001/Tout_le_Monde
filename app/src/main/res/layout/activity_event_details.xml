<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".EventDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/details_event_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Details"
                android:textColor="@color/sky"
                android:textAlignment="center"
                android:textSize="40sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/details_event_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/placeholder_image"
                android:layout_marginTop="0dp" />

            <TextView
                android:id="@+id/details_event_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Date"
                android:layout_marginTop="0dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30sp"
                android:background="@color/sky" />

            <TextView
                android:id="@+id/details_event_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Location"
                android:layout_marginTop="20dp"
                android:textColor="@color/sky"
                android:textStyle="bold"
                android:textSize="30sp"
                android:background="@color/black" />

            <TextView
                android:id="@+id/details_event_host"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Host"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30sp"
                android:background="@color/sky" />

            <TextView
                android:id="@+id/details_event_campaign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Campaign"
                android:layout_marginTop="20dp"
                android:textColor="@color/sky"
                android:textStyle="bold"
                android:textSize="30sp"
                android:background="@color/black" />

            <TextView
                android:id="@+id/details_event_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Start Time"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30sp"
                android:background="@color/sky" />

            <TextView
                android:id="@+id/details_event_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event End Time"
                android:layout_marginTop="20dp"
                android:textColor="@color/sky"
                android:textStyle="bold"
                android:textSize="30sp"
                android:background="@color/black" />

            <TextView
                android:id="@+id/details_event_max"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Max Participants"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30sp"
                android:background="@color/sky" />

            <TextView
                android:id="@+id/details_event_available"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Available Spots"
                android:layout_marginTop="20dp"
                android:textColor="@color/sky"
                android:textStyle="bold"
                android:textSize="30sp"
                android:background="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:text="Description"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="30sp"
                android:background="@color/sky" />

            <TextView
                android:id="@+id/details_event_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Description"
                android:layout_marginTop="20dp"
                android:textColor="@color/sky"
                android:textStyle="bold"
                android:textSize="30sp"
                android:background="@color/black" />

            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Sign Up"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@color/sky" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>







