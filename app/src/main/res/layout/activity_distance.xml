<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bluebackground5"
    tools:context=".DistanceActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:text="Tout Le Monde"
        style="@style/TextAppearance.AppCompat.Large"
        android:background="#89CFF0"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="60sp" />

    <Button
        android:id="@+id/btnTen"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="135dp"
        android:background="@drawable/round1"
        android:text="10 Miles from Your Location"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnTwentyFive"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/btnTen"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/round1"
        android:text="25 Miles from Your Location"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnFifty"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/btnTwentyFive"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/round1"
        android:text="50 Miles from Your Location"
        android:textSize="20sp"
        android:textStyle="bold" />


</RelativeLayout>